<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:text="LoginPage"
        android:textSize="30dp"
        android:id="@+id/tt"></TextView>

    <EditText
        android:layout_width="410dp"
        android:layout_height="57dp"
        android:layout_below="@+id/tt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="0dp"
        android:hint="Username"
        android:id="@+id/edu"></EditText>

    <EditText
        android:id="@+id/edp"
        android:layout_width="410dp"
        android:layout_height="57dp"
        android:layout_below="@+id/edu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="0dp"
        android:hint="Password"></EditText>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="116dp"
        android:text="Attempts: 5"
        android:textSize="30dp"></TextView>

    <Button
        android:id="@+id/btnL"
        android:layout_width="138dp"
        android:layout_height="62dp"
        android:layout_below="@+id/txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="231dp"
        android:backgroundTint="#7E7E7E"
        android:text="Login"></Button>
</RelativeLayout>