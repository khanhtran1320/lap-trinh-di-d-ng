<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="TÍNH CHU VI VÀ DIỆN TÍCH HÌNH BÌNH HÀNH"
        android:textAlignment="center"
        android:textSize="20dp"></TextView>

    <EditText
        android:id="@+id/edtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="-1dp"
        android:hint="Nhập cạnh a" />

    <EditText
        android:id="@+id/edtr"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp"
        android:hint="nhập cạnh b" />

    <EditText
        android:id="@+id/edth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtr"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:hint="nhập chiều cao h"></EditText>

    <Button
        android:id="@+id/btnc"
        android:layout_width="131dp"
        android:layout_height="71dp"
        android:layout_below="@+id/edth"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="110dp"
        android:text="chu vi"></Button>

    <Button
        android:layout_width="131dp"
        android:layout_height="71dp"
        android:layout_below="@+id/edth"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="70dp"
        android:text="diện tích"
        android:id="@+id/btnd"></Button>

    <TextView
        android:id="@+id/txkq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="0dp"
        android:textSize="30dp"></TextView>


</RelativeLayout>